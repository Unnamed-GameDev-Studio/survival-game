{
  "name": "postapoc",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite build && vite preview",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest --config=jest.config.ts",
    "test:e2e": "playwright test",
    "coverage": "jest --config=jest.coverage.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts --fix",
    "prettier": "prettier --write .",
    "postinstall": "husky install",
    "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
    "commitlog": "conventional-changelog -i COMMITLOG.md -s -r 0 -n conventional-changelog.config.js",
    "index": "ctix create -p ./tsconfig.json",
    "update_comments": "node .husky/hooks/add_comments.js",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major",
    "tree": "sh .husky/hooks/create_filetree.sh"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "bitecs": "^0.3.38",
    "chalk": "^5.2.0",
    "inversify": "^6.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "loglevel": "^1.8.1",
    "logrocket": "^4.0.2",
    "mitt": "^3.0.0",
    "phaser": "3",
    "rbush": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "tweakpane": "^3.1.7"
  },
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.4.4",
    "@playwright/test": "^1.32.1",
    "@tweakpane/core": "^1.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.2.5",
    "@types/rbush": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.7",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.36.0",
    "glob": "^9.3.2",
    "husky": "^8.0.3",
    "inquirer": "^9.2.6",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "markdown-notes-tree": "^1.12.0",
    "prettier": "^2.8.6",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-static-copy": "^0.13.1"
  }
}
